<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h4>Hi <%= current_user.first_name %></h4>
      #####<br>
      #####<br>
      #####<br>


    </div>
    <div class="col-md-6">
        <% if @user.reservations.count > 0 %>
          <%= render @user.reservations %>
        <% else %>
          <div>You don't have any reservations yet</div>
        <% end %>
    </div>
  </div>
</div>

<div id="form-drop-down" class="col-md-12 text-center"><hr></div>

<div class="container">
  <div class="row">
    <div class="panel panel-default col-md-4">
      <div class="panel-heading"><span class="text-left">Places</span><i id="add-place" class="fa fa-plus pull-right"></i></div>
      <div class="panel-body">
        <% if @user.places.count > 0 %>
          <%= render @user.places %>
        <% else %>
          <div>You don't have any properties yet</div>
        <% end %>
      </div>
    </div>
    <div class="panel panel-default col-md-4">
      <div class="panel-heading"><span class="text-left">Keys</span><i id="add-key" class="fa fa-plus pull-right"></i></div>
      <div class="panel-body">
        <!-- VERY HACKY, MUST BE REPLACED !!!! -->
        <% if @user.places.count > 0 %>
          <% if @user.places[0].keys.count > 0 %>
            <%= render @user.places[0].keys %>
          <% end %>
        <% else %>
          <div>You don't have any keys yet</div>
        <% end %>
      </div>
    </div>
    <div class="panel panel-default col-md-4">
      <div class="panel-heading"><span class="text-left">Guests</span><i id="add-client" class="fa fa-plus pull-right"></i></div>
      <div class="panel-body">
        <% if @user.clients.count > 0 %>
          <%= render @user.clients %>
        <% else %>
          <div>You don't have any clients yet</div>
        <% end %>
      </div>
    </div>
  </div>
</div>

